{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/*.css",
      "!**/*.js",
      "!**/*.js.map",
      "!**/*.d.ts",
      "!**/*.d.ts.map",
      "!**/*.html",
      "!**/*.json",
      "!**/*.tsx"
    ],
    "maxSize": 4194304
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "noExplicitAny": "off"
      }
    }
  }
}
